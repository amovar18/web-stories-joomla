<?xml version="1.0" encoding="utf-8"?>
<extension type="component" method="upgrade">
    <name>Web Stories</name>
    <creationDate>December 2019</creationDate>
    <author>Google</author>
    <authorUrl>https://smith.ca</authorUrl>
    <license>GPL v2</license>
    <!--  The version string is recorded in the components table -->
    <version>1.12.0</version>
    <!-- The description is optional and defaults to the name -->
    <description>
        Web Stories for a visual storytelling experience.
    </description>

    <!-- This is the PHP namespace under which the extension's
    code is organised. It should follow this format:
    
    Vendor\Component\ComponentName

    "Vendor" can be your company or your own name
    
    The "ComponentName" section MUST match the name used 
    everywhere else for your component. Whatever the name of 
    this XML file is, the namespace must match (ignoring CamelCase). 
    -->
    <namespace path="src/">Google\Component\WebStories</namespace>
    <files folder="plugin/" id="webstories" group="webservices" type="plugin">
        <filename>webstories.php</file>
        <filename>webstories.xml</file>
    </files>  
    <administration>
        <!-- The link that will appear in the Admin panel's "Components" menu -->
        <menu link="index.php?option=com_webstories">Web Stories</menu>
        <!-- List of files and folders to copy. Note the 'folder' attribute.
             This is the name of the folder in your component package to copy FROM -->
        <files folder="admin">
            <folder>services</folder>
            <folder>src</folder>
            <folder>tmpl</folder>
        </files>
    </administration>
    <api>
        <files folder="api/">
            <folder>Controllers</folder>
            <folder>View</folder>
        </files>
    </api>
    <media folder="media" destination="com_webstories">
        <folder>css</folder>
        <folder>js</folder>
        <folder>images</folder>
        <filename>joomla.asset.json</filename>
    </media>
</extension>